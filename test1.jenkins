        }
    stages {
        stage("Git clone") {
            steps {
                dir("/tmp") {
                sh 'git clone https://github.com/Kw1nT/nginx_conf_update'
                }
              }
            }
        stage("SECOND_STEP") {
            steps {
                sh 'ssh root@ua-vn-bob02 \'uptime\''
              }
           }
        }
     }
