#!groovy
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
        }
    triggers { pollSCM('* * * * *') }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
        }
    stages {
        stage("Git clone") {
            steps {
                sh 'git clone https://github.com/Kw1nT/nginx_conf_update'
               }
            }
        stage("Start ansible playbook") {
            steps {
                sh 'ansible-playbook -i hosts common.yml --tags nginx'
              }
           }
        }
     }
